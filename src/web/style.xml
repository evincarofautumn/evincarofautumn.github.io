<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE style
 SYSTEM "css.dtd">
<style>

:target
{
    &Underlined;
}

a
{
    &Underlined;
}

a code
{
    margin: inherit;
}

abbr
{
    &Small-caps;
}

ruby > .about-data
{
    border-radius:              &medium-radius;;
    border-bottom:              1px solid &border-color;;
    padding-left:               &medium-radius;;
    padding-right:              &medium-radius;;
}

body
{
    background-color:           &page-color;;
    color:                      &text-color;;
    font-family:                serif;
    &Double-spaced;
}

code
{
    font-family:                monospace;
    font-size:                  normal;
    &Double-spaced;
    &Spaced;
}

.compact code
{
    &Thin-spaced;
}

pre > code
{
    display:                    block;
    &Block;
    &Indented;
}

dd
{
    &Block;
    &Indented;
}

dl
{
    &Block;
}

dt
{
    &Heavy;
}

figcaption
{
    &Indented;
    &Italic;
}

figure
{
    &Figure;
}

h1
{
    &Block;
}

main > heading > h1
{
    font-size:                  xx-large;
}

section > heading > h1
{
    font-size:                  x-large;
}

section section > heading > h1
{
    font-size:                  large;
}

h2
{
    &Block;
}

heading
{
    border-bottom:              1px solid &border-color;;
    display:                    block;
    &Block;
}

li
{
    &Block;
    &Indented;
}

main
{
    margin:                     &xx-large-margin; auto;
    max-width:                  64em;
    padding:                    0 &large-margin;;
}

mark
{
    background-color:           &highlight-color;;
    &Heavy;
}

code .note
{
    font-family:                sans-serif;
}

p
{
    &Block;
}

main > heading > p
{
    font-size:                  x-large;
}

section > heading > p
{
    font-size:                  large;
}

pre
{
    background-color:           &sample-color;;
    border:                     1px solid &border-color;;
    &Block;
}

section
{
    display:                    block;
    margin:                     &x-large-margin; 0;
}

section section
{
    &Indented;
}

.ref
{
    &Underlined;
}

ruby
{
    ruby-align:                 center;
    ruby-position:              under;
}

rt
{
    font-size:                  small;
}

span.cat
{
    white-space:                normal;
}

span.email
{
    &Heavy;
}

span.err
{
    text-decoration-color:      &error-color;;
    &WavyUnderlined;
}

span.fix
{
    white-space:                nowrap;
}

span.grp
{
    display:                    inline-block;
    white-space:                normal;
}

span.kwd
{
    &Heavy;
}

span.warn
{
    text-decoration-color:      &warning-color;;
    &WavyUnderlined;
}

strong
{
    &Heavy;
}

code > sup
{
    font-size:                  inherit;
}

table
{
    border-collapse:            collapse;
    width:                      100%;
}

td,
th
{
    border-color:               &border-color;;
    border-style:               solid;
    border-width:               1px 0;
    padding:                    &small-margin;;
    text-align:                 left;
    vertical-align:             baseline;
}

.compact td,
.compact th
{
    font-size:                  smaller;
    padding:                    &space;;
}

td.cell + td.cell,
td.cell:first-child,
th + th,
th:first-child
{
    border-left-style:          dashed;
    border-left-width:          1px;
}

td.cell:last-child,
th:last-child
{
    border-right-style:         dashed;
    border-right-width:         1px;
}

td.brk
{
    background-image:           url("/hatch-light.svg");
}

td.gap
{
    background-image:           url("/hatch-medium.svg");
}

td.gap:only-child
{
    background-image:           url("/hatch-dark.svg");
}

td.neg
{
    background-color:           &negative-color;;
}

td.pos
{
    background-color:           &positive-color;;
}

.todo
{
    color:                      &todo-color;;
    &Italic;
}

u
{
    &Underlined;
}

ul
{
    &Block;
}

var
{
    &Italic;
}

</style>
